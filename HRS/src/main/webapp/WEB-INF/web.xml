<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-
instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">

 <servlet>
  <servlet-name>login</servlet-name>
  <servlet-class>com.staff.LoginServlet</servlet-class>
 </servlet>

 <servlet-mapping>
  <servlet-name>login</servlet-name>
  <url-pattern>/login</url-pattern>
 </servlet-mapping>

 <servlet>
  <servlet-name>Customercare</servlet-name>
  <servlet-class>com.issue.CustomercareServlet</servlet-class>
 </servlet>

 <servlet-mapping>
 <servlet-name>Customercare</servlet-name>
 <url-pattern>/care</url-pattern>
 </servlet-mapping>

 <servlet>
 <servlet-name>issueinsert</servlet-name>
 <servlet-class>com.issue.IssueInsert</servlet-class>
 </servlet>
 
 <servlet-mapping>
 <servlet-name>issueinsert</servlet-name>
 <url-pattern>/insert</url-pattern>
 </servlet-mapping>
 
 <servlet>
 <servlet-name>updateissue</servlet-name>
 <servlet-class>com.issue.UpdateIssueServlet</servlet-class>
 </servlet>
 
 <servlet-mapping>
 <servlet-name>updateissue</servlet-name>
 <url-pattern>/update</url-pattern>
 </servlet-mapping>
 
 <servlet>
 <servlet-name>deleteissue</servlet-name>
 <servlet-class>com.issue.DeleteIssueServlet</servlet-class>
 </servlet>
 
 <servlet-mapping>
 <servlet-name>deleteissue</servlet-name>
 <url-pattern>/delete</url-pattern>
 </servlet-mapping>

</web-app>